generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Convidado {
  id         Int                @id @default(autoincrement())
  nome       String
  email      String             @unique
  telefone   String?
  mensagem   String?
  token      String?            @unique
  usado      Boolean            @default(false)
  presenteId Int?               @unique
  presente   TabelaDePresentes? @relation(fields: [presenteId], references: [id])
}

model TabelaDePresentes {
  id         Int         @id @default(autoincrement())
  nome       String
  imagem     String?
  descricao  String?
  disponivel Boolean?    @default(true)
  convidados Convidado[]
}

model Evento {
  id        Int      @id @default(autoincrement())
  titulo    String
  data      DateTime
  local     String
  imagem    String?
  descricao String?
  criadoEm  DateTime @default(now())
}
